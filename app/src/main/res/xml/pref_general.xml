<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <CheckBoxPreference
        android:key="@string/night_checkbox"
        android:title="@string/pref_title_nightmode_title"
        android:summary="@string/pref_title_nightmode_description"
        android:defaultValue="true" />


    <ListPreference
        android:key="@string/metric_selection"
        android:title="@string/pref_title_metric_selection"
        android:defaultValue="-1"
        android:entries="@array/pref_list_metrics_titles"
        android:entryValues="@array/pref_list_metrics_values"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null" />

</PreferenceScreen>
